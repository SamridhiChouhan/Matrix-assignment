  <section id="contact">
    <div class="container">
      <h2 class="section-title">Contact Us</h2>

      <div class="contact">
        <input type="text" placeholder="Name" />
        <input type="email" placeholder="Email" />
        <textarea rows="4" placeholder="Message"></textarea>
        <button class="btn" onclick="demoSubmit()">Send Message (Demo)</button>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer>
    This is a sample project created solely for hiring evaluation purposes.
  </footer>

